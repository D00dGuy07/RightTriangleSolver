<UserControl x:Class="RightTriangleSolver.MathResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RightTriangleSolver"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#242424" Margin="5,5,5,5" Grid.Column="0">
            <TextBlock x:Name="variableName"
                   FontSize="30" Foreground="White"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border Background="#242424" Margin="5,5,5,5" Grid.Column="1">
            <StackPanel x:Name="stepsStack"/>
        </Border>
            
    </Grid>
</UserControl>
